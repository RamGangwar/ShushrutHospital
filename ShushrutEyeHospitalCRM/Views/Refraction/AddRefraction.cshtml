<link rel="stylesheet" type="text/css" href="~/css/jquery_validation.css" />
<link href="~/css/jquery-ui.css" rel="stylesheet" />
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="header-icon">
            <i class="pe-7s-note2"></i>
        </div>
        <div class="header-title">
            <h1>Refraction</h1>
            <small>Refraction Create</small>
            <ol class="breadcrumb hidden-xs">
                <li><a href="~/Home/Index"><i class="pe-7s-home"></i> Home</a></li>
                <li class="active">Dashboard</li>
            </ol>
        </div>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- Form controls -->
            <div class="col-sm-12">
                <div class="panel panel-bd lobidrag">
                    <div class="panel-heading">
                        <div class="btn-group">
                            <a class="btn btn-primary" href="~/Refraction/Index">
                                <i class="fa fa-list"></i>  Refraction List
                            </a>
                        </div>
                    </div>
                    <div class="panel-body">
                        <form id="frmAddRefraction">
                            <div class="row">
                                <div class="form-group col-sm-3">
                                    <label>First Name<span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="txtFirstName" name="txtFirstName" placeholder="Enter first name" required>
                                </div>
                                <div class="form-group col-sm-3">
                                    <label>Last Name<span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="txtLastName" name="txtLastName" placeholder="Enter last name" required>
                                </div>
                                <div class="col-sm-3 form-group">
                                    <label>Email<span class="text-danger">*</span></label>
                                    <input type="email" class="form-control" id="txtEmail" name="txtEmail" placeholder="Enter email" required>
                                </div>
                                <div class="form-group col-sm-3">
                                    <label>Mobile<span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="txtMobile" name="txtMobile" placeholder="Enter mobile number" required>
                                </div>
                                <div class="form-group col-sm-3">
                                    <label>Date of Birth<span class="text-danger">*</span></label>
                                    <input name="txtDOB" id="txtDOB" class="form-control" type="date" placeholder="Date of birth" autocomplete="off">
                                </div>
                                <div class="col-sm-3 form-group">
                                    <label>Password<span class="text-danger">*</span></label>
                                    <input type="password" class="form-control" id="txtPassword" name="txtPassword" placeholder="Enter password" required>
                                </div>
                                <div class="col-sm-3 form-group">
                                    <label>Picture upload</label>
                                    <input type="file" class="form-control" name="fileProfilePic" id="fileProfilePic" accept="image/jpg,image/png,image/jpeg">
                                </div>
                                <div class="form-group col-sm-3">
                                    <label>Gender<span class="text-danger">*</span></label><br>
                                    <div class="form-control">
                                        <label class="radio-inline"><input name="gender" value="Male" type="radio">Male</label>
                                        <label class="radio-inline"><input name="gender" value="Female" type="radio">Female</label>
                                    </div>
                                </div>
                                <div class="form-group col-sm-12">
                                    <label>Address<span class="text-danger">*</span></label>
                                    <textarea class="form-control" id="txtAddress" name="txtAddress" placeholder="Address"></textarea>
                                </div>
                                <div class="form-group col-sm-3">
                                    <label>Status<span class="text-danger">*</span></label><br>
                                    <div class="form-control">
                                        <label class="radio-inline"><input type="radio" name="status" value="1" checked="checked">Active</label> <label class="radio-inline"><input type="radio" name="status" value="0">Inctive</label>
                                    </div>
                                </div>
                                <div class="col-sm-3 form-check">
                                    <br />
                                    <img id="previewProfile" />
                                </div>
                                <div class="col-sm-12 reset-button">
                                    <button type="button" id="btnSave" class="btn btn-success">Save</button>
                                    <button type="reset" id="btnReset" class="btn btn-warning">Reset</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section> <!-- /.content -->
</div>
@section scripts{
    <!-- jquery validation -->
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script type="text/javascript" src="~/js/add_refraction.js"></script>
}